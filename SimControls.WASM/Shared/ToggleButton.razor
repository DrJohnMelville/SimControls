@using SimControls.Model
@if (ChildContent != null && Value != null)
{
    <button @onclick="() => Value.Toggle()"
             disabled="@Disabled"
             class="@(Value.BoolValue ? "toggledButton" : "")">
        @ChildContent
    </button>
}

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public IBoolItem? Value { get; set; }
    [Parameter] public bool Disabled { get; set; }
}