            <property name = "ModelAnimation"/>
            <property name = "Activated"/>
       		  <property name = "FileName"/>
            <property name = "AttachedWorldPosition"/>
            <property name = "AttachedWorldObject"/>
            <property name = "InitRelativeToWorldObject"/>
            <property name = "RelativePosition"/>
		    <property name = "IsCollidableWithUser"/>
        </SetDef>

		<SetDef
			  id="{F4DCFB14-BC87-4CF6-82DA-E064DD3D5455}"
			  classid = "{24D8AF50-1207-4A44-816F-BD903990E6DF}"
			  name="VisualEffectObject"
			  policy="inclusive"
			  descr="Visual Effect Scenery Object">
			<property name = "InstanceId"/>
			<property name = "Descr"/>
			<property name = "WorldPosition"/>
			<property name = "LocalDistance"/>
			<property name = "LocalHeading"/>
			<property name = "LocalAltitude"/>
			<property name = "LocalOffsetXYZ"/>
			<property name = "LocalOrientation"/>
			<property name = "Orientation" />
			<property name = "VisualEffectGuid" />
      <property name = "VisualEffectName" />
			<property name = "AltitudeIsAGL" />
			<property name = "IsOnGround" />
			<property name = "Scale"/>
			<property name = "ImageComplexity"/>
			<property name = "Effect"/>
			<!-- may be multiple instances -->
			<property name = "ModelAnimation"/>
			<property name = "Activated"/>
			<property name = "FileName"/>
			<property name = "AttachedWorldPosition"/>
			<property name = "AttachedWorldObject"/>
			<property name = "InitRelativeToWorldObject"/>
      <property name = "RelativePosition"/>
		</SetDef>

      <SetDef
            id="{B726CDA0-70A0-4F7E-9ECF-A8FE1F135FBA}"
            name="AirportLightParams"
            policy="inclusive"
            descr="List of parameters for an AirportLight">
        <property name = "AirportLightIntensity"/>
        <property name = "AirportLightRadius"/>
        <property name = "AirportLightPeriod"/>
        <property name = "AirportLightPhase"/>
        <property name = "AirportLightColor"/>
        <property name = "AirportLightType"/>
      </SetDef>

      <SetDef
            id="{52BE6B43-9C0F-4B77-94CB-7322EC0032AE}"
            classid="{CE6E4001-98A6-431F-9A0B-53F99455993E}"
            name="AttachAirportLightToNodes"
            policy="inclusive"
            descr="Create AirportLights and attach them to Nodes of objects">
        <property name = "InstanceId"/>
        <property name = "Descr"/>
        <property name = "AirportLightParams"/>
        <property name = "ObjectReferenceList"/>
        <property name = "NodeName"/>
        <property name = "NodePrefixName"/>
